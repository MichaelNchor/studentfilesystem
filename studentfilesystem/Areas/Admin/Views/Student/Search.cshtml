
@{
    ViewData["Title"] = "Search";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    #RegisterValidation > div > div.card-footer.text-right > button {
        background-color: #141E30;
    }
</style>
<div class="panel-header">
    <div class="header text-center">
        <h2 class="title">Advanced Search</h2>
        <p class="category">Advanced Student Search</p>
    </div>
</div>
<div class="content">
    <div class="col">
        <form method="post" asp-controller="Student" asp-action="Search">
            <div class="card ">
                <div class="card-header ">
                </div>
                <div class="card-body ">
                    <div class="form-group has-label">
                        <label>
                            Search
                        </label>
                        <input class="form-control" name="text" type="text" placeholder="Search Name, Student Number, Email">
                    </div>
                    <div class="form-group has-label">
                        <label>
                            Search Programme
                        </label>
                        <select class="form-control" data-size="7" data-style="btn btn-primary btn-round" name="programme" title="AcademicYear" required="true">
                            <option disabled selected value="select-year">-- select programme --</option>
                            <option value="Mathematics">Mathematics</option>
                            <option value="Actuarial">Actuarial</option>
                            <option value="Agriculture">Agriculture</option>
                        </select>
                    </div>
                    <div class="form-group has-label">
                        <label>
                            Search Department
                        </label>
                        <input class="form-control" name="department" type="text" placeholder="Search By Department">
                    </div>
                    <div class="form-group has-label">
                        <label>
                            Search College
                        </label>
                        <input class="form-control" name="college" type="text" placeholder="Search By College">
                    </div>
                    <div class="form-group has-label">
                        <label>
                            Start Date
                        </label>
                        <input class="form-control" type="number" min="1900" max="2099" step="1" name="startDate" id="startDate" placeholder="1950">
                    </div>
                    <div class="form-group has-label">
                        <label>
                            End Date
                        </label>
                        <input class="form-control"  type="number" min="1900" max="2099" step="1" name="endDate" id="endDate" placeholder="2099">
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">Advanced Search</button>
                </div>
            </div>
        </form>
    </div>
</div>